<h1>Bulk Discount Edit Form</h1>

<%= form_with url:"/merchant/#{@merchant.id}/bulk_discounts/#{@discount.id}", method: :patch, local: true do |f| %>
<%= f.label :percent %>
 <%= f.text_field :percent, :value => @discount.percent %><br>

 <%= f.label :threshold %>
 <%= f.text_field :threshold, :value => @discount.threshold %><br>

 <%= f.hidden_field :merchant_id, :value => @merchant.id %>

 <%= f.submit %>
<% end %>
